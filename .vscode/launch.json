    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug cli",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/cli/main.go",
            "args": ["logs", "--lines=3", "-f", "6"],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Debug daemon",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/daemon/main.go"
        }
    ]
}
